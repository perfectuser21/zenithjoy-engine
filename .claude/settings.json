{
  "skills": {
    "paths": ["./skills"]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [{"type": "command", "command": "./hooks/session-init.sh"}]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [{"type": "command", "command": "./hooks/branch-protect.sh"}]
      },
      {
        "matcher": "Bash",
        "hooks": [{"type": "command", "command": "./hooks/pr-gate-v2.sh"}]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{"type": "command", "command": "./hooks/project-detect.sh"}]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [{"type": "command", "command": "./hooks/stop-gate.sh"}]
      }
    ]
  }
}
